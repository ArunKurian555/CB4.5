#SYMBOL_NAME "CCVIT_ColdBrew_AK_V1.2"
#DEFAULT_VOLATILE

#help_begin
	Convert CCVI & Ramp Time Levels to Serial, Trimmed for ColdBrew
#help_end

/**** I/O Variables ****/
DIGITAL_INPUT DMXenabled[250];
STRING_INPUT Timee[255];
ANALOG_INPUT Ii[250],Ci[250];
STRING_OUTPUT TX;
String Command[50];
integer Grpi;
/**** Functions ****/
Change Ii,Ci
{
Grpi = GetLastModifiedArrayIndex();
if(DMXenabled[Grpi]=1)
{
makestring(Command,"%03d,%03d,%03d,%02s",Grpi,Ii[Grpi],Ci[Grpi],Timee);
TX = Command;
}
}

